@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BulkBook.Models.Company

<form method="post" asp-action="Upsert" enctype="multipart/form-data"> @*Method tipimizi belirleyip controllerimizin içindeki hangi methodun çalışacağını belirledik.*@
  <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-parimary">@(Model.Id != 0 ? "Update" : "Create") Company</h2> <br />
                </div>
            
                 <div class="mb-3">
                    <label asp-for="Name"></label> @*asp-for ile hangi classtan neyi alıcağımızı belirttik*@
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StreetAddress"></label> @*asp-for ile hangi classtan neyi alıcağımızı belirttik*@
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="City"></label> @*asp-for ile hangi classtan neyi alıcağımızı belirttik*@
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="State"></label> @*asp-for ile hangi classtan neyi alıcağımızı belirttik*@
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PostalCode"></label> @*asp-for ile hangi classtan neyi alıcağımızı belirttik*@
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber"></label> @*asp-for ile hangi classtan neyi alıcağımızı belirttik*@
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
               
              
                <div class="col-12">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-secondary" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-secondary" style="width:150px">Create</button>
                    }

                    <a asp-controller="Company" asp-action="Index" class="btn btn-warning" style="width:150px">Back To List</a>
                </div>
            </div>
        </div>
        
    </div>
</form>
@section scripts {
    @{
            <partial name="_ValidationScriptsPartial"></partial>
    }
}
    

   